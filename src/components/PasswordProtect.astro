---
// Componente de protección con contraseña
// La contraseña se verifica del lado del cliente
---

<div id="password-protect-overlay" class="password-overlay">
  <div class="password-container">
    <div class="password-logo">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C9.24 2 7 4.24 7 7V10H6C4.9 10 4 10.9 4 12V20C4 21.1 4.9 22 6 22H18C19.1 22 20 21.1 20 20V12C20 10.9 19.1 10 18 10H17V7C17 4.24 14.76 2 12 2ZM12 4C13.66 4 15 5.34 15 7V10H9V7C9 5.34 10.34 4 12 4ZM12 14C13.1 14 14 14.9 14 16C14 17.1 13.1 18 12 18C10.9 18 10 17.1 10 16C10 14.9 10.9 14 12 14Z" fill="currentColor"/>
      </svg>
    </div>
    <h1 class="password-title">Acceso Restringido</h1>
    <p class="password-subtitle">Introduce la contraseña para acceder al contenido</p>

    <form id="password-form" class="password-form">
      <div class="input-wrapper">
        <input
          type="password"
          id="site-password"
          placeholder="Contraseña"
          autocomplete="current-password"
          required
        />
        <button type="button" id="toggle-password" class="toggle-password" aria-label="Mostrar contraseña">
          <svg id="eye-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 4.5C7 4.5 2.73 7.61 1 12C2.73 16.39 7 19.5 12 19.5C17 19.5 21.27 16.39 23 12C21.27 7.61 17 4.5 12 4.5ZM12 17C9.24 17 7 14.76 7 12C7 9.24 9.24 7 12 7C14.76 7 17 9.24 17 12C17 14.76 14.76 17 12 17ZM12 9C10.34 9 9 10.34 9 12C9 13.66 10.34 15 12 15C13.66 15 15 13.66 15 12C15 10.34 13.66 9 12 9Z" fill="currentColor"/>
          </svg>
        </button>
      </div>
      <p id="password-error" class="password-error"></p>
      <button type="submit" class="password-submit">
        Acceder
      </button>
    </form>
  </div>
</div>

<div id="protected-content" style="display: none;">
  <slot />
</div>

<style>
  .password-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }

  .password-container {
    background: white;
    padding: 3rem;
    border-radius: 1rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    max-width: 400px;
    width: 90%;
    text-align: center;
  }

  .password-logo {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
  }

  .password-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a1a2e;
    margin: 0 0 0.5rem;
  }

  .password-subtitle {
    color: #6b7280;
    margin: 0 0 2rem;
    font-size: 0.95rem;
  }

  .password-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .input-wrapper {
    position: relative;
  }

  .password-form input {
    width: 100%;
    padding: 0.875rem 3rem 0.875rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    font-size: 1rem;
    transition: border-color 0.2s, box-shadow 0.2s;
    box-sizing: border-box;
  }

  .password-form input:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .toggle-password {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    color: #9ca3af;
    padding: 0.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
  }

  .toggle-password:hover {
    color: #667eea;
  }

  .password-error {
    color: #ef4444;
    font-size: 0.875rem;
    margin: 0;
    min-height: 1.25rem;
  }

  .password-submit {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 0.875rem 1.5rem;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .password-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px -10px rgba(102, 126, 234, 0.5);
  }

  .password-submit:active {
    transform: translateY(0);
  }
</style>

<script>
  const CORRECT_PASSWORD = 'Xana2026!';
  const STORAGE_KEY = 'xana_site_authenticated';

  function checkAuth(): boolean {
    return sessionStorage.getItem(STORAGE_KEY) === 'true';
  }

  function setAuth(): void {
    sessionStorage.setItem(STORAGE_KEY, 'true');
  }

  function showContent(): void {
    const overlay = document.getElementById('password-protect-overlay');
    const content = document.getElementById('protected-content');

    if (overlay) overlay.style.display = 'none';
    if (content) content.style.display = 'block';
  }

  function init(): void {
    // Si ya está autenticado, mostrar contenido directamente
    if (checkAuth()) {
      showContent();
      return;
    }

    const form = document.getElementById('password-form') as HTMLFormElement;
    const passwordInput = document.getElementById('site-password') as HTMLInputElement;
    const errorEl = document.getElementById('password-error');
    const toggleBtn = document.getElementById('toggle-password');

    // Toggle password visibility
    toggleBtn?.addEventListener('click', () => {
      const type = passwordInput.type === 'password' ? 'text' : 'password';
      passwordInput.type = type;
    });

    // Handle form submission
    form?.addEventListener('submit', (e) => {
      e.preventDefault();

      const password = passwordInput.value;

      if (password === CORRECT_PASSWORD) {
        setAuth();
        showContent();
      } else {
        if (errorEl) errorEl.textContent = 'Contraseña incorrecta. Inténtalo de nuevo.';
        passwordInput.value = '';
        passwordInput.focus();
      }
    });
  }

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>